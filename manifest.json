{
        "manifest_version": 3,
        "name": "Security Scanner Pro",
        "version": "1.1.0",
        "description": "Escanea tu PC en línea: IP, malware, filtraciones, privacidad del navegador y mucho más",
        "permissions": [
                  "activeTab",
                  "scripting",
                  "storage",
                  "webRequest",
                  "tabs",
                  "notifications",
                  "cookies"
        ],
        "host_permissions": [
                  "https://browserleaks.com/*",
                  "https://haveibeenpwned.com/*",
                  "https://www.abuseipdb.com/*",
                  "https://www.virustotal.com/*",
                  "https://api.abuseipdb.com/*",
                  "<all_urls>"
        ],
        "action": {
                  "default_popup": "popup.html",
                  "default_title": "Security Scanner Pro",
                  "default_icon": {
                              "16": "images/icon-16.svg",
                              "48": "images/icon-48.svg",
                              "128": "images/icon-128.svg"
                  }
        },
        "background": {
                  "service_worker": "background.js"
        },
        "icons": {
                  "16": "images/icon-16.svg",
                  "48": "images/icon-48.svg",
                  "128": "images/icon-128.svg"
        },
        "content_security_policy": {
                  "extension_pages": "script-src 'self'; object-src 'self'"
        }
}
