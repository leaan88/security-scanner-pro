{
    "manifest_version": 3,
    "name": "Security Scanner Pro",
    "version": "1.0.0",
    "description": "Escanea tu PC en l√≠nea: IP, malware, filtraciones, privacidad del navegador",
    "permissions": [
          "activeTab",
          "scripting",
          "storage",
          "webRequest"
    ],
    "host_permissions": [
          "https://browserleaks.com/*",
          "https://haveibeenpwned.com/*",
          "https://www.abuseipdb.com/*",
          "https://www.virustotal.com/*"
    ],
    "action": {
          "default_popup": "popup.html",
          "default_title": "Security Scanner Pro"
    },
    "background": {
          "service_worker": "background.js"
    },
    "icons": {
          "16": "icons/icon16.png",
          "48": "icons/icon48.png",
          "128": "icons/icon128.png"
    }
}
